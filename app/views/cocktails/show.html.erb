<h2><%= @cocktail.name %></h2>
    <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <% else  %>
    <% end %>

<ul>
  <% @cocktail.doses.each do |dose|%>
  <li>
    <%= dose.ingredient.name %>
    <%=" / " %>
    <%= dose.description %>
  </li>
  <% end %>
</ul>
<%= link_to "Edit a cocktail", edit_cocktail_path %>
<%= link_to "Add a dose of an ingredient to this cocktail", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to cocktails list", cocktails_path %>
